<Window x:Class="Week_8_list_view_second_try.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Week_8_list_view_second_try"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black"/>
                <GradientStop Color="#FFE01717" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <ListView x:Name="lvCharacters" Margin="497,72,33,166">
            <ListView.View>
                <GridView>

                    <!--Header = displays on the top of the column
                    DisplayMemberBinding = "Binding property"-->
                    <GridViewColumn
                          
                    Header = "Player Name"
                        
                        DisplayMemberBinding="{Binding PlayerName}"
                        />


                </GridView>
            </ListView.View>
        </ListView>
        <Button Content="Button" Margin="48,267,626,103" BorderBrush="#FF154367" OpacityMask="#FF2A1E80" Click="Button_Click"/>

    </Grid>
</Window>
